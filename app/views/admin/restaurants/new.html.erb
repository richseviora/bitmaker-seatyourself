<h1>Add new restaurant</h1>

<%= form_for @restaurant, url: admin_restaurants_path do |f| %>

    <% if @restaurant.errors.any? %>
        <div>
          <h2>Form Invalid</h2>
          <ul>
            <% @restaurant.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :capacity %>
      <%= f.text_field :capacity %>
    </div>
    <div>
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
    </div>
    <div>
      <%= f.label :street_number%>
      <%= f.text_field :street_number %>
    </div>
    <div>
      <%= f.label :street_name %>
      <%= f.text_field :street_name %>
    </div>
    <div>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div>
      <%= f.label :province %>
      <%= f.text_field :province %>
    </div>
    <div>
      <%= f.label :country %>
      <%= f.text_field :country %>
    </div>
    <div>
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code %>
    </div>
    <div>
      <%= f.submit "Add restaurant" %>
    </div>
<% end %>