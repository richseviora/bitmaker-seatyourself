<h1>Administrators Page</h1>
<p>Hello Administrator: <%= current_user.name %></p>
<h2>Users</h2>
<td><%= link_to "Sign up new customer", new_customer_path%></td> |
<td><%= link_to "Sign up new restaurant", new_admin_restaurant_path %></td> |
<td><%= link_to "Create a new admin user", new_admin_user_path %> </td>
<table>
  <thead>
      <tr>
        <th>User Name</th>
        <th>User type</th>
        <th>User Phone Number</th>
        <th>User Email</th>
        <th>Edit User</th>
        <th>Delete User</th>
      </tr>
  </thead>
  <tbody>
  <%= User.find_each do |user|%>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.type %></td>
      <td><%= user.phone_number %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Edit", edit_admin_user_path(user.id) %></td>
      <td><%= link_to "Delete", admin_user_path(user.id), method: :delete, data: {confirm: "Are you sure you want to delete this user?"}  %></td>
    </tr>
  <% end %>
  </tbody>
</table>