<h1>Administrators Page</h1>
<p>Hello Administrator: <%= current_user.name %></p>
<h2>Users</h2>
<td><%= link_to "Sign up new customer", new_customer_path%></td> |
<td><%= link_to "Create a new admin user", new_admin_user_path %> </td>
<br/>
<table>
  <thead>
      <tr>
        <th>User Name</th>
        <th>User type</th>
        <th>User Phone Number</th>
        <th>User Email</th>
        <th>Edit User</th>
        <th>Delete User</th>
      </tr>
  </thead>
  <tbody>
  <%= User.find_each do |user|%>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.type %></td>
      <td><%= user.phone_number %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Edit", edit_admin_user_path(user.id) %></td>
      <td><%= link_to "Delete", admin_user_path(user.id), method: :delete, data: {confirm: "Are you sure you want to delete this user?"}  %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br/>
<br/>

<h2>Restaurants</h2>
<td><%= link_to "Add a restaurant", new_admin_restaurant_path %></td>
<table>
      <tr>
        <th>Restaurant Name</th>
        <th>Street Address</th>
        <th>City</th>
        <th>Province</th>
        <th>Country</th>
        <th>Postal Code</th>
        <th>Operating Hours</th>
        <th>Approval</th>
      </tr>
    <tr>
  <tbody>
  <%= Restaurant.find_each do |place| %>
      <td><%= place.name %></td>
      <td><%= place.street_number %> <%= place.street_name %></td>
      <td><%= place.city %></td>
      <td><%= place.province %></td>
      <td><%= place.postal_code %></td>
      <td><%= place.country %></td>
      <td><%= place.hours %></td>
      <td><%= link_to "Delete", admin_restaurant_path(place.id), method: :delete, data: {confirm: "Are you sure
      you want to
      delete this restaurant?"}  %></td>
      </tr>
      <% end %>
  </tbody>

</table>
</p>
